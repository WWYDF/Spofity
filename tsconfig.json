{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "moduleSuffixes": [".js", ""], // Add .js to imports
        "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  